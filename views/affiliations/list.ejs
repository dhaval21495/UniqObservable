<%layout('../layout')%>
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Affiliations List</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="AffiliationsList">
                                <thead>

                                    <tr>
                                        <th>Sr.No</th>
                                        <th>Name</th>
                                        <th>Status</th>
                                        <!-- <th>Actions</th> -->
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(affiliationsList.length>0) { %>
                                        <% for(var i=0; i<affiliationsList.length;i++) { %>
                                            <tr class="gradeA">
                                                <td>
                                                    <%= i+1 %>
                                                </td>
                                                <td>
                                                    <%= affiliationsList[i].affiliation_name%>
                                                </td>
                                                <td>

                                                    <% if(affiliationsList[i].status)
                                                    { %>
                                                        <span style="color: green">Active</span>
                                                        <%}
                                                    else{%>
                                                        <span style="color: red">Inactive</span>
                                                    <% } %>
                                                </td>
                                                <!-- <td>
                                                    <a href="/admin/affiliations/edit/<%= affiliationsList[i]._id%>">
                                                        <i class="fa fa-edit"></i>
                                                    </a> 
                                                </td> -->
                                            </tr>

                                            <% }
                                                } else { %>
                                                <tr>
                                                    <td colspan="6">
                                                        No Affiliations found.
                                                    </td>
                                                </tr>
                                                <% } %>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>

    </div>
    <!-- /#page-wrapper -->
    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script src="/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('table').dataTable({
                responsive: true,
                'aoColumnDefs': [{
                    'bSortable': false,
                    'aTargets': [-1] /* 1st one, start by the right */
                }]
            });

        });
    </script>

    </body>

    </html>